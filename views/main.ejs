<%- include ./part/header.ejs %>

	<header>
		<img src="<%= profilePic %>"/>
		<h1><%= userName %></h1>
		<span>Dislikes:</span><h2><%= dislikes.length %></h2>
		<span>Title:</span><h3><%= title %></h3>
	</header>

	<div class="pics">
		<% reverseArray = images.reverse() %>
		<% reverseArray.forEach(image => { %>
		<% const ratingClass = dislikes.includes(image._id.toString()) ? 'active' : '' %>
		
			<div class="pic">
				<div>
					<img class="instagram" src="<%= image.image %>"/>
				</div>
				<form method="POST" action="/main/<%= image._id %>/rating">
					<button type="submit" name="dislike" class="<%= ratingClass %>">Terrible</button>
				</form>
			</div>
		
		<% }) %>
	</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/bundle.js"></script>
<%- include ./part/footer.ejs %>
